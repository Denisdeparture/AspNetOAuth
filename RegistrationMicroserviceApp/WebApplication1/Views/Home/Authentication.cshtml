@model WebApplication1.Models.LoginViewInfoModel

@{
    int counterIcon = 0;
}
<link rel="stylesheet" href="../css/Authorization.css" type="text/css" />
<div class="registration-cssave">
    <h1>Войдите через: </h1>
    <form asp-controller="Home" asp-action="ProviderAuthentication" asp-route-returnUrl="@Model.ReturnUrl">
        @foreach(var provider in Model.genericDatas)
        {
            <button type="submit"
                    name="provider"
                    value="@provider.Name"
                    >
                <img src="@Model.IconUrlLink[counterIcon]" alt="@provider.DisplayName" height="50" width="50" />
            </button>
            counterIcon++;
        }
    </form>
    <form method="post" asp-action="Authentication", asp-controller="Home", asp-route-returnUrl="@Model.ReturnUrl">
        <h3 class="text-center">Форма ВХОДА</h3>
        <div class="form-group">
            <input class="form-control item" type="password" name="Password" minlength="6" id="Password" placeholder="Пароль" required>
        </div>
        <div class="form-group">
            <input class="form-control item" type="email" name="Mail" id="Mail" placeholder="Mail" required>
        </div>
        <div class="form-group">
            <input class="form-control item" type="text" name="Login" id="Login" placeholder="Логин" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block create-account" type="submit">Вход</button>
        </div>
    </form>
     <a href="https://localhost:5000/Home/Authorization"><p>Зарегистрироваться</p></a>
     
   
    
</div>


